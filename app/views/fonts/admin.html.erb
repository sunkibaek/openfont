<% if notice %>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>폰트</th>
      <th>font-family</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th>종류</th>
      <th>스타일</th>
      <th>두께</th>
    </tr>
  </thead>

  <tbody>
    <% @fonts.each do |font| %>
      <tr>
        <td><%= link_to font.name, edit_font_path(font) %></td>
        <td><%= font.family_name %></td>
        <td><span class="label label-<%= font.eot ? 'success' : 'default'  %>">eot</span></td>
        <td><span class="label label-<%= font.woff ? 'success' : 'default'  %>">woff</span></td>
        <td><span class="label label-<%= font.woff2 ? 'success' : 'default'  %>">woff2</span></td>
        <td><span class="label label-<%= font.ttf ? 'success' : 'default'  %>">ttf</span></td>
        <td><span class="label label-<%= font.svg ? 'success' : 'default'  %>">svg</span></td>
        <td><%= font.font_type.name %></td>
        <td><%= font.style %></td>
        <td><%= font.weight %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Font', new_font_path, class: "btn btn-primary" %>